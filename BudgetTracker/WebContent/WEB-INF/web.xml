<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>info.budget.login.Login</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BudgetTrackerSearchController</servlet-name>
    <servlet-class>info.budget.budgettracker.BudgetTrackerSearchController</servlet-class>
  </servlet>
  <!-- BTController = Insert  -->
  <servlet>
    <servlet-name>BudgetTrackerAddController</servlet-name>
    <servlet-class>info.budget.budgettracker.BudgetTrackerAddController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BudgetTrackerDeleteController</servlet-name>
    <servlet-class>info.budget.budgettracker.BudgetTrackerDeleteController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BTModifyController</servlet-name>
    <servlet-class>info.budget.budgettracker.BudgetTrackerModifyController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/BTloginpage</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BudgetTrackerSearchController</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BudgetTrackerAddController</servlet-name>
    <url-pattern>/add</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BudgetTrackerDeleteController</servlet-name>
    <url-pattern>/BudgetTrackerDeleteController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BTModifyController</servlet-name>
    <url-pattern>/BudgetTrackerModifyController</url-pattern>
  </servlet-mapping>
  
  
</web-app>